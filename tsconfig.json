{
  "compilerOptions": {
      "target": "es5",
      "strict": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "es5", "es2015.promise", "es2017", "es6"],
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}